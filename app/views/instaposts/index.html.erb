<p id="notice"><%= notice %></p>

<h1>Instaposts</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instaposts.each do |instapost| %>
      <tr>
        <td><%= "Placeholder Image" %></td>
        <td><%= instapost.caption %></td>
        <td><%= instapost.user.email %></td>
        <td><%= link_to 'Show', instapost %></td>
        <% if instapost.user == current_user %>
          <td><%= link_to 'Edit', edit_instapost_path(instapost) %></td>
          <td><%= link_to 'Destroy', instapost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instapost', new_instapost_path %>
