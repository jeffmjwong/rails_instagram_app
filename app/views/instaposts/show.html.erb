<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @instapost.photo_url(:medium) %>
</p>

<p>
  <strong>Caption:</strong>
  <%= @instapost.caption %>
</p>

<p>
  <strong>User:</strong>
  <%= @instapost.user.email %>
</p>

<div>
  <% if @instapost.comments.present? %>
    <h2>Comments</h2>
    <% @instapost.comments.each do |comment| %>
      <p>
        <strong><%= comment.user.email %> says:</strong>
        <%= comment.content %>
      </p>
    <% end %>
  <% end %>
  <h2>Add Comment</h2>
  <%#= form_for @instapost.comments.new do |f| %>
    <div class="field">
      <%#= f.label :content, 'Comment' %>
      <%#= f.text_area :content %>
    </div>

    <div class="actions">
      <%#= f.submit %>
    </div>
  <%# end %>
</div>

<% if @instapost.user == current_user %>
  <%= link_to 'Edit', edit_instapost_path(@instapost) %> |
<% end %>
<%= link_to 'Back', instaposts_path %>
